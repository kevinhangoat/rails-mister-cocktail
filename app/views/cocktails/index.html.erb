<!-- navbar   -->
<div class="fixed-top navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand avatar" do %>
    <%= image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTTobhqoqPRphj6JVmmOqtnkVo0QHnGFa8LWsVXxH8VONtYaaGKRw", class: "avatar dropdown-toggle"%>
    <p class = "navbar-brand" style = "color: white; font-family: 'Indie Flower', cursive;">Cocktail Weaver</p>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto navbar-search-box">
      <li class="nav-item">
        <a style = "font-family: 'Indie Flower', cursive;" href= "cocktails/new" class="btn btn-black">Weave A New Cocktail</a>
      </li>
      <li>
        <div class = "small-search-box" >
          <%= simple_form_for :search, url: root_path, method: "GET", html: { class: 'form-inline' } do |f| %>
          <%= f.input :name, input_html: {value: ""}, label:false %>
          <%= f.submit "Search", class: "btn btn-outline-light" %>
        <% end %>
      </li>
      <li class="nav-item dropdown">
        <%= image_tag "user.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "My cocktails", "#", class: "dropdown-item" %>
          <%= link_to "Weave a new cocktail", "#", class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>

<!-- banner -->
<div class="home-banner">
  <h1 class = "text-Indie" >Cocktail Weaver</h1>
  <p>
    <span id="banner-typed-text"></span>
  </p>

  <div class = "search-box" >
    <%= simple_form_for :search, url: root_path, method: "GET", html: { class: 'form-inline' } do |f| %>
      <%= f.input :name, input_html: {value: ""}, label:false %>
      <%= f.submit "Search", class: "btn btn-outline-light" %>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
    </div>
  </div>
</div>


<div class = "container">
  <div class = "row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-sm-8 col-md-6 col-lg-3 my-5">
        <%= link_to cocktail_path(cocktail) do%>
          <div class="card-trip">
            <% if cocktail[:image] %>
              <img src= <%= cocktail[:image] %> />
            <% else %>
              <%= cl_image_tag cocktail.photo, height: 300, width: 400, crop: :fill %>
            <% end %>
            <div class="card-trip-infos">
              <div>
                <h2 style = "font-size: 22px" class = "btn btn-light text-Indie" ><%= cocktail[:name] %></h2>
              </div>
              <%= link_to cocktail_path(cocktail), method: :delete, data: {confirm: "Are you sure?"} do %>
              <img src="https://cdn3.iconfinder.com/data/icons/cleaning-icons/512/Trash_Can-512.png" class="card-trip-user avatar-bordered" />
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>




