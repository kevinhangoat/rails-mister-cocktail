<h1><%= @cocktail[:name] %></h1>
<h2>Doses List:</h2>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name %> <%= link_to "delete", dose_path(dose), method: :delete, data: {confirm: "Are you sure?"} %></li>
  <% end %>
</ul>

<%= link_to "add a dose", new_cocktail_dose_path(@cocktail) %>
