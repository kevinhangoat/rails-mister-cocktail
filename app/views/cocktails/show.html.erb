<!-- banner -->
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand avatar" do %>
    <%= image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTTobhqoqPRphj6JVmmOqtnkVo0QHnGFa8LWsVXxH8VONtYaaGKRw", class: "avatar dropdown-toggle"%>
    <p class = "navbar-brand" style = "color: black; font-family: 'Indie Flower', cursive;">Cocktail Weaver</p>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a style = "font-family: 'Indie Flower', cursive;" href= "cocktails/new" class="btn btn-light">Create A New Cocktail</a>
      </li>
      <li class="nav-item dropdown">
        <%= image_tag "user.jpeg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Action", "#", class: "dropdown-item" %>
          <%= link_to "Another action", "#", class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>


<div>
  <div class="card-product">
    <img src=<%= @cocktail[:image] %> />
    <div class="card-product-infos text-Indie ">
      <h1 class = "text-Indie"><%= @cocktail[:name] %></h1>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.description%> <%= dose.ingredient.name %> <%= link_to "delete", dose_path(dose), method: :delete, data: {confirm: "Are you sure?"}, style: "text-decoration: none" %></li>
        <% end %>
      </ul>
      <%= link_to "Weave a new dose", new_cocktail_dose_path(@cocktail), class: "btn btn-light"%>
    </div>
  </div>
</div>





