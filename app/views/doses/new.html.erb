<div class = "container text-center" style = "background-image: url(https://images.unsplash.com/photo-1527271982979-83fea3eb3582?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=752&q=80); height: 500px; width: 700px; object-fit: cover; padding: 150px 80px; opacity: 0.7">
  <h1 class="text-Indie" >Weave a dose for <%= @cocktail[:name] %></h1>
  <%= simple_form_for [@cocktail, @dose] do |f|%>
  <%= f.label :description, "Amount", class: "text-Indie" %>
  <%= f.input :description, class: "text-Indie", label: false %>
  <%= f.label :Ingredient, "Ingredient", class: "text-Indie" %>
  <%= f.association :ingredient, collection: @ingredients, label: false %>
  <%= f.submit "add a dose", class: "btn btn-primary text-Indie" %>
  <% end %>
</div>


